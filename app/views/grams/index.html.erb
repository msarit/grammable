<div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
  <% @grams.each do |gram| %>
    <div class="card">
      <div class="handle">
        <%= link_to gram.user.fullname, user_path(gram.user) %>
        <small class="float-right"><%= gram.created_at.strftime("%m.%d.%Y") %></small>
      </div>
      <%= image_tag gram.picture, class: 'img-fluid' %>

      <p>
        <%= gram.message %>
      </p>

      <div class="gram-actions">
        <% if current_user && current_user == gram.user %>
          <%= link_to 'Delete', gram_path(gram), method: :delete, data: {confirm: 'Are you sure?'} %>
          <%= link_to 'Edit', edit_gram_path(gram) %>
        <% end %>
      </div>

      <br class="clear-fix" />

      <%= link_to "Comments (#{gram.comments.count})", gram_path(gram), class: 'btn my-btn comment-btn' %>

      <br class="clear-fix" />
    </div>
  <% end %>
</div>