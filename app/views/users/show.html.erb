<div class="col-12 col-md-8 offset-md-2">
  <h2 class="user-handle"><%= @user.fullname %>'s Grams</h2>
  <% @user.grams.reverse_order.each do |gram| %>
    <div class="card">
      <div class="handle">
        <small class="float-right"><%= gram.created_at.strftime("%D") %></small>
      </div>

      <%= image_tag gram.picture, class: 'img-fluid' %>

      <p>
        <%= gram.message %>
      </p>

      <div class="gram-actions float-right">
        <% if current_user && current_user == gram.user %>
          <%= link_to 'Edit', edit_gram_path(gram) %>
          <%= link_to 'Delete', gram_path(gram), method: :delete, data: {confirm: 'Are you sure?'} %>
        <% end %>
      </div>

      <br class="clear-fix" />

      <%= link_to "Comments (#{gram.comments.count})", gram_path(gram), class: 'btn my-btn comment-btn' %>

      <br class="clear-fix" />
    </div>
  <% end %>
</div>